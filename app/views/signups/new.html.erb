<h4>Signup for these awesome activities</h4>

<% if flash[:signup_errors] %>
  <% flash[:signup_errors].each do |error| %>
    <p style="color:red;"><%= error %></p>
  <% end %>
<% end  %>

<%= form_for @signup do |f|%>
<%= f.label :time %>
<%= f.number_field :time%>
<br>
<%= f.label :Camper %>
<%= f.collection_select :camper_id , Camper.all, :id , :name %>
<br>
<%= f.label :Activity %>
<%= f.collection_select :activity_id, Activity.all, :id , :name %>
<br>
<%= f.submit%>
<%end %>


